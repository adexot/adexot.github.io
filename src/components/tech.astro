---
const techStack = [
  "JS/TS",
  "React",
  "Node",
  "GraphQL",
  "HTML & CSS",
  "Astro",
  "Vue",
  "NextJS",
  "ExpressJS",
  "Redux",
];
---

<section class="" id="tech-stack">
  <h3 class="heading center">Tech Stack</h3>
  <ul class="wrapper">
    {
      techStack.map((tech, index) => (
        <li class={`item item-${index}`}>{tech}</li>
      ))
    }
  </ul>
</section>

<style lang="scss">
  @import "../assets/css/_utils.scss";
  .wrapper {
    max-width: 1500px;
    width: 100%;
    // height: 100px;
    position: relative;
    // mask-image: linear-gradient(
    //     to right,
    //     transparent,
    //     black 10%,
    //     black 90%,
    //     transparent
    // );
  }

  .item {
    width: 200px;
    height: 100px;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    border-radius: 12px;
    border: 2px solid rgba(213, 213, 213, 0.3);
    transition: transform 0.3s;
    // position: absolute;
    // left: 100%;
    // animation: scrollLeft 5s linear infinite;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;

    &:hover {
      transform: scale(1.1);
      border-color: rgba(213, 213, 213, 0.6);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      background-color: rgba(255, 255, 255, 0.05);
    }
  }

  @for $i from 0 through 9 {
    .item-#{$i} {
      animation-delay: calc(30s / 10 * (10 - #{$i}) * -1);
    }
  }
</style>
